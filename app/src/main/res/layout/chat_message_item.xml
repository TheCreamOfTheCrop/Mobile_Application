<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/currentUserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/userText"
                style="@style/ChatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textAlignment="textEnd"
                tools:text="Lorem ipsum blabalbal abalbala balbal ablabala  balbala blabalbalabalbalabalbalabalbalabalbalbalba"/>

            <TextView
                android:id="@+id/date"
                style="@style/ChatDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:gravity="right"
                tools:text="Le 05/03/1994 à 22h45"
                />
        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_profile"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherUserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/otherUserImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/otherUsertext"
                style="@style/ChatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:textAlignment="textStart"
                tools:text="Lorem ipsum blabalbal abalbala balbal ablabala  balbala blabalbalabalbalabalbalabalbalabalbalbalba"/>

            <TextView
                android:id="@+id/otherDate"
                style="@style/ChatDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                tools:text="Le 05/03/1994 à 22h45"
                />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>