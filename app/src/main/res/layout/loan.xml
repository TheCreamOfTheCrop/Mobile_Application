<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/loan_list_item_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/generalPadding"
    android:paddingTop="@dimen/generalPadding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ProgressBar
            android:id="@+id/loader"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/firstName"
            style="@style/GreyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="Thomas"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/lastName"
            style="@style/GreyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            tools:text="Ecalle"
            tools:visibility="visible"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/amount"
            style="@style/AmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableEnd="@drawable/ic_euro_symbol"
            android:drawableRight="@drawable/ic_euro_symbol"
            tools:text="4000"
            />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableEnd="@drawable/ic_percent"
            android:drawableRight="@drawable/ic_percent"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            tools:text="10"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textStyle="italic"
        tools:text="Voici ma description"
        />

</LinearLayout>