<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="ms_stepperStyle">@style/StepperStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="StepperStyle">
        <item name="ms_stepperType">tabs</item>
        <item name="ms_activeStepColor">@color/colorPrimary</item>
        <item name="ms_inactiveStepColor">@color/grey</item>
        <item name="ms_backButtonColor">@color/black</item>
        <item name="ms_nextButtonColor">@color/black</item>
        <item name="ms_errorColor">@color/ms_errorColor</item>
        <item name="ms_completeButtonColor">@color/black</item>
        <item name="ms_showErrorStateEnabled">true</item>
        <item name="ms_showBackButtonOnFirstStep">true</item>
        <item name="ms_stepperFeedbackType">tabs|disabled_bottom_navigation</item>
        <!-- <item name="ms_showErrorMessageEnabled">true</item> -->
    </style>

    <style name="GeneralContainer">
        <item name="android:padding">@dimen/generalPadding</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="RoundedEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

    <style name="GreyEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="AddLoanEditText" parent="GreyEditText">
        <item name="android:gravity">right</item>
        <item name="android:textSize">24sp</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>


    <style name="SmallRoundedEditText" parent="RoundedEditText">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RoundedMultilineEditText" parent="AddLoanEditText">
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">4</item>
        <item name="android:maxLines">10</item>
        <item name="android:padding">20dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/labelGrey</item>
        <item name="android:textColorHint">@color/labelGrey</item>

    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SendButton" parent="CustomButton">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlueChoiceButton" parent="CustomButton">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomGreyButton" parent="CustomButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:background">@drawable/cutom_grey_button_background</item>
    </style>

    <style name="AcceptButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/accept_button_background</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

    <style name="WhiteLabel" parent="NormalText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="GreyLabel" parent="NormalText">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LightGreyLabel" parent="GreyLabel">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="SmallGreyLabel" parent="LightGreyLabel">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="DarkGreyLabel" parent="LightGreyLabel">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ChatText" parent="LightGreyLabel">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_message_background</item>
    </style>

    <style name="ChatDateLabel" parent="GreyLabel">
        <item name="android:textColor">@color/dateGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="ChannelLastMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="BlueLabel" parent="LightGreyLabel">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="BlackTitle" parent="NormalText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallWhiteText" parent="WhiteLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="SmallBlackText" parent="WhiteLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AddLoanTitle" parent="SmallBlackText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="whiteTextViewButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/light_button_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="BigAmount" parent="WhiteLabel">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="LoansListTitle" parent="NormalText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AmountTitle" parent="NormalText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ErrorLabel" parent="NormalText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

    <style name="SuccessLabel" parent="NormalText">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="LinkedText">
        <item name="android:padding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/linked_text</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

</resources>
